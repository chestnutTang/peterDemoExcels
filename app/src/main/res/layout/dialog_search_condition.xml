<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="demo.third.com.exceldemo.ui.activity.MyWebActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_44">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/tip_search_condition"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/text_margin_18"
            android:layout_height="@dimen/text_margin_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin_18"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_close_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/black9" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/tip_key_words"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11" />

        <EditText
            android:id="@+id/et_search_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/edit_search_condition"
            android:drawablePadding="@dimen/margin_10"
            android:hint="@string/tip_ed"
            android:imeOptions="actionSearch"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_5"
            android:singleLine="true"
            android:textColor="@color/black3"
            android:textColorHint="@color/line_black"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/txt_time_create"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11" />

        <RadioGroup
            android:id="@+id/rg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ck_3_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/search_condition_selector"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/txt_3_months"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />

            <RadioButton
                android:id="@+id/ck_1_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/search_condition_selector"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/txt_1_year"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />
        </RadioGroup>


        <RelativeLayout
            android:layout_width="@dimen/layout_height_80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/edit_search_condition"
                android:gravity="center|left"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:textColor="@color/white_2f"
                android:textSize="@dimen/text_size_11" />

            <ImageView
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_bottom" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/layout_height_80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/edit_search_condition"
                android:gravity="center|left"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:textColor="@color/white_2f"
                android:textSize="@dimen/text_size_11" />

            <ImageView
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_bottom" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_20"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/txt_time_sign"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11" />

        <RadioGroup
            android:id="@+id/rg_time_dj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ck_1_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/search_condition_selector"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/txt_1_months"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />

            <RadioButton
                android:id="@+id/ck_3_month2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/search_condition_selector"
                android:baselineAligned="false"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/txt_3_months"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="@dimen/layout_height_80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time3"
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/edit_search_condition"
                android:gravity="center|left"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:textColor="@color/white_2f"
                android:textSize="@dimen/text_size_11" />

            <ImageView
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_bottom" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/layout_height_80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time4"
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/edit_search_condition"
                android:gravity="center|left"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:textColor="@color/white_2f"
                android:textSize="@dimen/text_size_11" />

            <ImageView
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_bottom" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_20"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/txt_tip_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/ck_scale_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/edit_search_condition"
            android:button="@null"
            android:gravity="center"
            android:hint="manageScalaZero"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/height_5"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_scale_0"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/ck_scale_0_than"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/edit_search_condition"
            android:baselineAligned="false"
            android:button="@null"
            android:gravity="center"
            android:hint="oneYearManageScalaZero"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/height_5"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_scale_0_than"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/ck_low_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_search_condition"
            android:button="@null"
            android:gravity="center"
            android:hint="handInUnderRegister25P"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_low_capital"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/ck_low_100w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/edit_search_condition"
            android:baselineAligned="false"
            android:button="@null"
            android:gravity="center"
            android:hint="handInLe100W"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/height_5"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_low_100w"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/ck_abnormal_liquidation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_search_condition"
            android:button="@null"
            android:gravity="center"
            android:hint="notNormalLiquidation"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_abnormal_liquidation"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/ck_without_qualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/edit_search_condition"
            android:baselineAligned="false"
            android:button="@null"
            android:gravity="center"
            android:hint="managerHasNotCertificate"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/height_5"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_without_qualifications"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

        <CheckBox
            android:id="@+id/ck_without_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/edit_search_condition"
            android:baselineAligned="false"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/height_2"
            android:paddingLeft="@dimen/height_5"
            android:paddingRight="@dimen/height_5"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_without_hint"
            android:textColor="@color/white_2f"
            android:textSize="@dimen/text_size_11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/txt_org_type"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11" />

        <demo.third.com.exceldemo.ui.views.RadioGroupEx
            android:id="@+id/rg_jglx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:childMarginLeft="@dimen/margin_5"
            app:childMarginRight="@dimen/line">

            <RadioButton
                android:id="@+id/ck_administrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_condition_selector"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/btn_administrator"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />

            <RadioButton
                android:id="@+id/ck_administrator_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_condition_selector"
                android:baselineAligned="false"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/btn_administrator_create"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />

            <RadioButton
                android:id="@+id/ck_administrator_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/search_condition_selector"
                android:baselineAligned="false"
                android:button="@null"
                android:paddingBottom="@dimen/height_2"
                android:paddingLeft="@dimen/height_5"
                android:paddingRight="@dimen/height_5"
                android:paddingTop="@dimen/height_2"
                android:text="@string/btn_administrator_other"
                android:textColor="@drawable/search_condition_color"
                android:textSize="@dimen/text_size_11" />
        </demo.third.com.exceldemo.ui.views.RadioGroupEx>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/black9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="@dimen/layout_height_80"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_normal"
            android:gravity="center"
            android:paddingBottom="@dimen/height_2"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_search"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_clear_condition"
            android:layout_width="@dimen/layout_height_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_height_40"
            android:background="@drawable/clear_red_circle"
            android:gravity="center"
            android:paddingBottom="@dimen/height_2"
            android:paddingTop="@dimen/height_2"
            android:text="@string/btn_clear_condition"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>
