<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_46"
    android:background="@drawable/ic_include_back">

    <ImageView
        android:id="@+id/iv_backup"
        android:layout_width="@dimen/image_20"
        android:layout_height="@dimen/image_22"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/image_margin"
        android:contentDescription="@null"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40"
        android:layout_marginBottom="@dimen/height_8"
        android:layout_marginLeft="@dimen/height_12"
        android:layout_marginRight="@dimen/height_12"
        android:layout_marginTop="@dimen/height_8"
        android:layout_toRightOf="@+id/iv_backup"
        android:background="@drawable/edit_homepage_shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@null"
            android:drawablePadding="@dimen/margin_5"
            android:imeOptions="actionSearch"
            android:paddingBottom="@dimen/height_7"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/height_7"
            android:singleLine="true"
            android:textColor="@color/black3"
            android:textColorHint="@color/line_black"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="@dimen/margin_15"
        android:layout_height="@dimen/margin_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/image_20"
        android:contentDescription="@null"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_close_gray" />


</RelativeLayout>
