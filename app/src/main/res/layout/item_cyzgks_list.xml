<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fund_products"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_50"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_black_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/image_24"
        android:layout_toLeftOf="@+id/tv_download"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/image_margin"
        android:paddingTop="@dimen/image_margin"
        android:singleLine="true"
        android:text="@string/txt_black_tip"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_11"/>


    <TextView
        android:id="@+id/tv_download"
        android:layout_width="@dimen/layout_height_40"
        android:layout_height="@dimen/text_margin_18"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/height_12"
        android:background="@drawable/login_btn_background"
        android:gravity="center"
        android:text="下载"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:background="@color/white_f2" />

</RelativeLayout>
