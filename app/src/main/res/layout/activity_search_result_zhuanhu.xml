<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.SearchResultActivity">

    <include layout="@layout/include_search_top" />


    <include
        layout="@layout/include_condition"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/txt_clrq"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_11" />

            <RadioGroup
                android:id="@+id/rg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ck_1_zjyjd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/search_condition_selector"
                    android:button="@null"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/txt_1_zjyjd"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_1_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/search_condition_selector"
                    android:button="@null"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/txt_1_year"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />
            </RadioGroup>


            <RelativeLayout
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/edit_search_condition"
                    android:gravity="center|left"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:textColor="@color/white_2f"
                    android:textSize="@dimen/text_size_11" />

                <ImageView
                    app:srcCompat="@drawable/ic_arrow_bottom"
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="@dimen/margin_8"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/edit_search_condition"
                    android:gravity="center|left"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:textColor="@color/white_2f"
                    android:textSize="@dimen/text_size_11" />

                <ImageView
                    app:srcCompat="@drawable/ic_arrow_bottom"
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="@dimen/margin_8"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/black9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_60"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_normal"
                android:gravity="center"
                android:paddingBottom="@dimen/height_2"
                android:paddingTop="@dimen/height_2"
                android:text="@string/btn_search"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_clear_condition"
                android:layout_width="@dimen/layout_height_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_height_40"
                android:background="@drawable/clear_red_circle"
                android:gravity="center"
                android:paddingBottom="@dimen/height_2"
                android:paddingTop="@dimen/height_2"
                android:text="@string/btn_clear_condition"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@color/white"
        android:scrollbars="none" />

</LinearLayout>