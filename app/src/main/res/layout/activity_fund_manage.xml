<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.ProductsInfoActivity">

    <include layout="@layout/common_include_top_without_right" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_org_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_10" />

                <EditText
                    android:id="@+id/et_pro_name"
                    android:layout_width="@dimen/layout_height_84"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:hint="@string/tip_ed"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/tip_fund_wait_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_10" />

                <EditText
                    android:id="@+id/et_manage_org"
                    android:layout_width="@dimen/layout_height_100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:hint="@string/tip_ed"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/height_5"
                    android:background="@drawable/clear_red_circle_white_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_3"
                    android:text="@string/btn_search"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/txt_number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="2.7"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_products_number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="1.3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_products_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tip_basj"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="3.1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_sign_address2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


            </LinearLayout>

            <demo.third.com.exceldemo.ui.views.MyListView
                android:id="@+id/lv_products_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="@color/white"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>