<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_size_210"
            android:scaleType="fitXY"
            android:src="@drawable/ic_bg_mine" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/layout_height_90"
            android:layout_height="@dimen/layout_height_90"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_head" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/image_22"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_margin_18"
            android:layout_marginTop="@dimen/image_30"
            android:src="@drawable/ic_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_32"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_back_blue"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="登录/注册"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_download_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_46"
        android:layout_marginTop="@dimen/margin_10">


        <ImageView
            android:id="@+id/iv_download_list"
            android:layout_width="@dimen/image_22"
            android:layout_height="@dimen/image_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_download" />

        <TextView
            android:id="@+id/txt_download_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_download_list"
            android:text="@string/action_modify_password"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_person_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_46">

        <ImageView
            android:id="@+id/iv_person_info"
            android:layout_width="@dimen/image_22"
            android:layout_height="@dimen/image_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_person_info" />

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_person_info"
            android:text="@string/title_person_info"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toLeftOf="@+id/iv_dayu2"
            android:text="完成度69%"
            android:textColor="@color/color_b3"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_dayu2"
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_46">

        <ImageView
            android:id="@+id/iv_member"
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_browse_records4" />

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_member"
            android:text="@string/tip_vip"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_15" />


        <TextView
            android:id="@+id/tv_btn_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toLeftOf="@+id/iv_dayu"
            android:text="@string/tip_vip_open"
            android:textColor="@color/blue_33"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_dayu"
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_46">

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="@dimen/image_22"
            android:layout_height="@dimen/image_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_follow" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_help"
            android:text="@string/tip_help"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_46">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/image_22"
            android:layout_height="@dimen/image_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_share_mine" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_share"
            android:text="@string/btn_share"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_contract_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_46">

        <ImageView
            android:id="@+id/iv_contract_us"
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_connect_us" />

        <TextView
            android:id="@+id/tv_contract_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_contract_us"
            android:text="@string/tip_contract_us"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/image_size_200"
        android:layout_height="@dimen/image_size_200"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>
