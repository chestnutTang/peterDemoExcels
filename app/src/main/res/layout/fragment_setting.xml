<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical">


    <include
        android:id="@+id/include_id"
        layout="@layout/mine_include_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_42" />

    <RelativeLayout
        android:id="@+id/rel_update_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55">

        <TextView
            android:id="@+id/txt_update_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:text="@string/action_modify_password"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

</LinearLayout>
