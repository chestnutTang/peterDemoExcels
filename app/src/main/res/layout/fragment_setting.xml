<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">


    <include
        android:id="@+id/include_id"
        layout="@layout/mine_include_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_42" />

    <RelativeLayout
        android:id="@+id/rel_update_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55">

        <ImageView
            android:id="@+id/iv_download_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_download" />

        <TextView
            android:id="@+id/txt_update_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_download_list"
            android:text="@string/action_modify_password"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_browse_records"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55">

        <ImageView
            android:id="@+id/iv_browse_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_browse_records" />

        <TextView
            android:id="@+id/tv_browse_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_browse_records"
            android:text="@string/title_records"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_follow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55">

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_follow" />

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_follow"
            android:text="@string/title_follow"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_person_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55">

        <ImageView
            android:id="@+id/iv_person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_person_info" />

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_margin_18"
            android:layout_toRightOf="@+id/iv_person_info"
            android:text="@string/title_person_info"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_22"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin_18"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/grayD4" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/image_size_200"
        android:layout_height="@dimen/image_size_200"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>
