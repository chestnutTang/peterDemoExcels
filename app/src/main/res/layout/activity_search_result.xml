<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.SearchResultActivity">

    <include layout="@layout/include_search_top" />


    <include layout="@layout/include_condition" />

    <TextView
        android:id="@+id/tv_search_results_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_30"
        android:background="@color/white_f2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:text="搜索到10条基金专户备案信息"
        android:textColor="@color/black_88"
        android:textSize="@dimen/text_size_12" />

    <ListView
        android:id="@+id/lv_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@color/white"
        android:scrollbars="none" />

</LinearLayout>