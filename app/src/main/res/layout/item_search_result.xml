<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_search_results_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_30"
        android:background="@color/white_f2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:text="搜索到10条基金专户备案信息"
        android:textColor="@color/black_88"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:id="@+id/ll_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head_company"
            android:layout_width="@dimen/layout_height_40"
            android:layout_height="@dimen/layout_height_40"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            app:srcCompat="@drawable/ic_company" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="@color/blue_33"
                android:textSize="@dimen/text_size_15"
                tools:text="非常厉害了" />

            <LinearLayout
                android:id="@+id/ll_daibiao_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委派代表姓名"
                    android:textColor="@color/color_89"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tv_daibiao_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/blue_33"
                    android:textSize="@dimen/text_size_11"
                    tools:text="张三" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/white_f2" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_org_type"
                android:textColor="@color/color_89"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_org_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_11"
                tools:text="非常厉999害了" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_sign_number"
                android:textColor="@color/color_89"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_sign_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_11"
                tools:text="非常厉999害了" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_sign_address"
                android:textColor="@color/color_89"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_sign_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:singleLine="true"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_11"
                tools:text="非常厉999害了" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_time_sign"
                android:textColor="@color/color_89"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_time_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:singleLine="true"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_11"
                tools:text="非常厉999害了" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/line_bottom_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/white_f2" />

    <View
        android:id="@+id/line_bottom_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/white_f2"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_look_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_28"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5"
        android:paddingTop="@dimen/margin_5"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="6"
            android:singleLine="true"
            android:text="@string/txt_look_all"
            android:textColor="@color/blue_33"
            android:textSize="@dimen/text_size_11" />

        <ImageView
            android:layout_width="@dimen/height_6"
            android:layout_height="@dimen/height_12"
            android:layout_marginLeft="@dimen/margin_10"
            app:srcCompat="@drawable/ic_arrow_right_blue" />

    </LinearLayout>

</LinearLayout>
