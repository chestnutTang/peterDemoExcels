<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.ProductsInfoActivity">

    <include layout="@layout/common_include_top_without_right" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:srlAccentColor="@android:color/white"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#444444">

        <ListView
            android:id="@+id/lv_products_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@color/white"
            android:scrollbars="none" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_products_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11" />

                <EditText
                    android:id="@+id/et_pro_name"
                    android:layout_width="@dimen/layout_height_120"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/txt_manage_org"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11" />

                <EditText
                    android:id="@+id/et_manage_org"
                    android:layout_width="@dimen/layout_height_120"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_10" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_products_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11" />

                <EditText
                    android:id="@+id/et_pro_number"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/txt_create_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11" />

                <RelativeLayout
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="@dimen/layout_height_90"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/edit_search_condition"
                        android:gravity="center|left"
                        android:paddingBottom="@dimen/height_3"
                        android:paddingLeft="@dimen/height_5"
                        android:paddingTop="@dimen/height_3"
                        android:textColor="@color/white_2f"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="@dimen/margin_10"
                        android:layout_height="@dimen/margin_5"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_bottom" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/margin_5"
                    android:layout_height="@dimen/line"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_time2"
                        android:layout_width="@dimen/layout_height_90"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/edit_search_condition"
                        android:gravity="center|left"
                        android:paddingBottom="@dimen/height_3"
                        android:paddingLeft="@dimen/height_5"
                        android:paddingRight="@dimen/height_5"
                        android:paddingTop="@dimen/height_3"
                        android:textColor="@color/white_2f"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="@dimen/margin_10"
                        android:layout_height="@dimen/margin_5"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_bottom" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_cc" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clear_red_circle_white_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_search"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_clear_condition"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_height_40"
                    android:background="@drawable/clear_red_circle_white_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_clear_condition"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/white_f2"
                android:visibility="visible" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/txt_number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1.3"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_products_number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="2.7"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_products_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ztzgs"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="2.7"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tip_ztzgs"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="2.7"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_manage_org"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_create_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>