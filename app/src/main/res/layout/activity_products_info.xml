<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.ProductsInfoActivity">

    <include layout="@layout/common_include_top_without_right" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_products_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />

                <EditText
                    android:id="@+id/et_pro_name"
                    android:layout_width="@dimen/layout_height_120"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:hint="@string/tip_ed"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/txt_manage_org"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />

                <EditText
                    android:id="@+id/et_manage_org"
                    android:layout_width="@dimen/layout_height_120"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:hint="@string/tip_ed"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_11" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_products_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />

                <EditText
                    android:id="@+id/et_pro_number"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:hint="@string/tip_ed"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/txt_create_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />

                <RelativeLayout
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="@dimen/layout_height_90"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/edit_search_condition"
                        android:gravity="center|left"
                        android:paddingBottom="@dimen/height_3"
                        android:paddingLeft="@dimen/height_5"
                        android:paddingTop="@dimen/height_3"
                        android:text="2018-09-09"
                        android:textColor="@color/white_2f"
                        android:textSize="@dimen/text_size_11" />

                    <ImageView
                        android:layout_width="@dimen/margin_10"
                        android:layout_height="@dimen/margin_8"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_bottom" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/margin_5"
                    android:layout_height="@dimen/line"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_time2"
                        android:layout_width="@dimen/layout_height_90"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/edit_search_condition"
                        android:gravity="center|left"
                        android:paddingBottom="@dimen/height_3"
                        android:paddingLeft="@dimen/height_5"
                        android:paddingRight="@dimen/height_5"
                        android:paddingTop="@dimen/height_3"
                        android:text="2018-09-09"
                        android:textColor="@color/white_2f"
                        android:textSize="@dimen/text_size_11" />

                    <ImageView
                        android:layout_width="@dimen/margin_10"
                        android:layout_height="@dimen/margin_8"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_bottom" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_cc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_60"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clear_red_circle_white_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_search"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_clear_condition"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_height_40"
                    android:background="@drawable/clear_red_circle_white_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_clear_condition"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/white_f2"
                android:visibility="visible" />

            <demo.third.com.exceldemo.ui.views.MyListView
                android:id="@+id/lv_products_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="@color/white"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>