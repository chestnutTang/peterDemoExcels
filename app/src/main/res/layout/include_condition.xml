<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/top_condition"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_42"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/ck_address"
                style="@style/filtrate_style"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/ck_address_triangle"
                android:text="@string/tv_country" />

            <CheckBox
                android:id="@+id/ck_address_triangle"
                android:layout_width="@dimen/margin_8"
                android:layout_height="@dimen/height_4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/screen_up_down"
                android:button="@null"
                android:clickable="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/height_1"
            android:layout_height="@dimen/image_20"
            android:layout_gravity="center"
            android:background="#ECECEC" />

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_42"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/ck_more"
                style="@style/filtrate_style"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/ck_more_triangle"
                android:text="@string/tip_search_condition" />

            <CheckBox
                android:id="@+id/ck_more_triangle"
                android:layout_width="@dimen/margin_8"
                android:layout_height="@dimen/height_4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/screen_up_down"
                android:button="@null"
                android:clickable="false" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>