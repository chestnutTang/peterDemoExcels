<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- Login progress -->

    <include layout="@layout/common_include_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/image_30"
                android:background="@drawable/veri_code_cicle"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/login_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/lin_phonenumber_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="@dimen/height_12"
                        android:layout_height="@dimen/text_margin_18"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="14dp"
                        app:srcCompat="@drawable/ic_phone_normal" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/image_24"
                        android:layout_marginRight="@dimen/image_24"
                        android:layout_toRightOf="@+id/image_phone"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/login_txt_phone"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/black3"
                        android:textColorHint="@color/line_black"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@color/line_black" />

                <RelativeLayout
                    android:id="@+id/rl_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/iv_password"
                        android:layout_width="@dimen/height_12"
                        android:layout_height="@dimen/text_margin_18"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="14dp"
                        app:srcCompat="@drawable/ic_password" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/image_24"
                        android:layout_marginRight="@dimen/image_24"
                        android:layout_toRightOf="@+id/iv_password"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/login_ed_pass"
                        android:inputType="textPassword"
                        android:maxLength="11"
                        android:textColor="@color/black3"
                        android:textColorHint="@color/line_black"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/text_size_14" />


                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@color/line_black" />

                <RelativeLayout
                    android:id="@+id/rl_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/iv_code"
                        android:layout_width="@dimen/height_12"
                        android:layout_height="@dimen/text_margin_18"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/image_24"
                        android:layout_marginRight="14dp"
                        app:srcCompat="@drawable/ic_verification_code" />

                    <EditText
                        android:id="@+id/et_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/iv_code"
                        android:background="@null"
                        android:hint="@string/login_txt_code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/black3"
                        android:textColorHint="@color/line_black"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_post_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/image_24"
                        android:background="@drawable/veri_code_cicle"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingBottom="@dimen/margin_8"
                        android:paddingLeft="@dimen/margin_5"
                        android:paddingRight="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_8"
                        android:text="@string/get_btn_code"
                        android:textColor="@color/main_color"
                        android:textSize="11.5sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@color/line_black"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/icon_protol_checked"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_protol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="用户协议"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tv_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="23dp"
                            android:text="@string/register_btn"
                            android:textColor="@color/black6"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/image_24"
                android:layout_marginRight="@dimen/image_24"
                android:layout_marginTop="18dp"
                android:background="@drawable/login_btn_background"
                android:text="@string/register_btn"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
