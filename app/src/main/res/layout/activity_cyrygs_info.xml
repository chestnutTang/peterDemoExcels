<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_include_top_without_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <!--红色的标题栏2-->
                    <LinearLayout
                        android:id="@+id/ll_red2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="54dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/txt_name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/txt_sex"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="@dimen/layout_height_40">

                            <TextView
                                android:id="@+id/tv_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingLeft="@dimen/height_10"
                                android:paddingRight="@dimen/height_10"
                                android:text="@string/tip_xl"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_zsbh"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/txt_institutional_org"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_cyzglb"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="88dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_zsqdrq"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="88dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_zsyxjzrq"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="66dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_zcbgjl"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_cxjl"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>


                    </LinearLayout>

                    <demo.third.com.exceldemo.ui.views.MyListView
                        android:id="@+id/lv_private_fund"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/color_cc"
                        android:listSelector="@color/white"
                        android:scrollbars="none" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>