<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/image_20"
        android:gravity="center"
        android:text="05-01 12:21"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_height_50"
            android:layout_height="@dimen/layout_height_50"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/icon_head" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/icon_message_bg"
            android:gravity="center|left"
            android:paddingLeft="@dimen/image_24"
            android:text="恭喜您，成功注册我们的APP"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

</LinearLayout>
