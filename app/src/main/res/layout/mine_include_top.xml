<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_42"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/iv_backup"
        android:layout_width="@dimen/image_20"
        android:layout_height="@dimen/image_22"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/image_margin"
        app:srcCompat="@drawable/ic_arrow_left"
        android:contentDescription="@null"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_height_42"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/title_detail"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/image_24"
        android:layout_height="@dimen/image_24"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/image_margin"
        app:srcCompat="@drawable/ic_share"
        android:contentDescription="@null"
        android:visibility="visible" />

</FrameLayout>
