<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_include_top_without_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/height_5"
                android:paddingTop="@dimen/height_5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/txt_org_leibie"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11" />

                    <Spinner
                        android:id="@+id/sp_jglb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/et_pro_name"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/txt_org_leibie"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11" />

                    <Spinner
                        android:id="@+id/sp_jglb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_pro_name"
                    android:layout_width="@dimen/layout_height_120"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toLeftOf="@+id/tv_search"
                    android:background="@drawable/edit_search_condition"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center|left"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="@dimen/height_3"
                    android:singleLine="true"
                    android:textColor="@color/black3"
                    android:textColorHint="@color/line_black"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/layout_height_50"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/height_5"
                    android:layout_marginRight="@dimen/height_5"
                    android:background="@drawable/login_btn_normal"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingTop="@dimen/height_3"
                    android:text="@string/btn_search"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />

            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <!--红色的标题栏2-->
                    <LinearLayout
                        android:id="@+id/ll_red2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/txt_bianhao"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="135dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/txt_org_name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="@dimen/layout_height_40">

                            <TextView
                                android:id="@+id/tv_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingLeft="@dimen/height_10"
                                android:paddingRight="@dimen/height_10"
                                android:text="@string/tip_ygrs"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_jjcyzg"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_jjxscyzg"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_qtcyzg"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_pevc"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_jjtzgw"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_jjjl"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_tzjl"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="@dimen/layout_height_40"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tip_tzzj"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10" />

                            <View
                                android:layout_width="@dimen/line"
                                android:layout_height="@dimen/layout_height_50"
                                android:layout_alignParentRight="true"
                                android:background="@color/color_cc" />
                        </RelativeLayout>


                    </LinearLayout>

                    <demo.third.com.exceldemo.ui.views.MyListView
                        android:id="@+id/lv_private_fund"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/color_cc"
                        android:listSelector="@color/white"
                        android:scrollbars="none" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>