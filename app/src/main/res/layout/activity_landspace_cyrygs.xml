<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_include_top_without_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/height_5"
                android:paddingTop="@dimen/height_5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/txt_org_leibie"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11" />

                    <Spinner
                        android:id="@+id/sp_jglb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_search"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/txt_org_leibie"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11" />

                    <Spinner
                        android:id="@+id/sp_jglb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/layout_height_50"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/height_10"
                    android:layout_marginRight="@dimen/height_10"
                    android:background="@drawable/login_btn_normal"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_3"
                    android:paddingTop="@dimen/height_3"
                    android:text="@string/btn_search"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />

            </RelativeLayout>

            <!--红色的标题栏2-->
            <LinearLayout
                android:id="@+id/ll_red2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="64"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/txt_bianhao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="236"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_products_number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="120">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/height_10"
                        android:paddingRight="@dimen/height_10"
                        android:text="@string/txt_products_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="172"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tip_smjjglrmc"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="260"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_tuo_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="133"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_clrq"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_weight="102"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_record_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10" />

                    <View
                        android:layout_width="@dimen/line"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_cc" />
                </RelativeLayout>


            </LinearLayout>

            <demo.third.com.exceldemo.ui.views.MyListView
                android:id="@+id/lv_private_fund"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="@color/white"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>