<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/white_f2"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_height_40"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="证券公司私募产品备案确认函"
                android:textColor="@color/black_58"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_product_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:lineSpacingMultiplier="1.3"
                android:text="证券公司私募产品备案确认函证函证函证函证函证函证函证函证函证函证函证券公司私募产品备案确认函"
                android:textColor="@color/black_58"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_product_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_3"
                android:singleLine="true"
                android:text="2016-08-09"
                android:textColor="@color/black_58"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            app:srcCompat="@drawable/ic_arrow_right" />

    </RelativeLayout>

</LinearLayout>
