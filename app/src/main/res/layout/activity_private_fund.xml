<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.PrivateFundActivity">

    <include layout="@layout/include_search_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_5"
                android:gravity="center"
                android:text="@string/btn_fund_record"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <demo.third.com.exceldemo.ui.views.RadioGroupEx
                android:id="@+id/rg_beian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ck_case_before"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_case_before"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_case_before2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_30"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_case_after"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />
            </demo.third.com.exceldemo.ui.views.RadioGroupEx>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white_f2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_5"
                android:gravity="center"
                android:text="@string/btn_manage_type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <demo.third.com.exceldemo.ui.views.RadioGroupEx
                android:id="@+id/rg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ck_manage_entrust"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_manage_entrust"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_manage_self"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_30"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_manage_self"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_manage_adviser"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_30"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_manage_adviser"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />
            </demo.third.com.exceldemo.ui.views.RadioGroupEx>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white_f2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_5"
                android:gravity="center"
                android:text="@string/btn_run_state"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <demo.third.com.exceldemo.ui.views.RadioGroupEx
                android:id="@+id/rg_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ck_running"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_running"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_liquidation_late"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_20"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_liquidation_late"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_liquidation_before"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_20"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_liquidation_before"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_normal_liquidation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_20"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="1"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/height_5"
                    android:paddingRight="@dimen/height_5"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_normal_liquidation"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_abnormal_liquidation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_abnormal_liquidation"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />

                <RadioButton
                    android:id="@+id/ck_protocol_end"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_26"
                    android:layout_marginLeft="@dimen/image_20"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/search_condition_selector"
                    android:baselineAligned="false"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_protocol_end"
                    android:textColor="@drawable/search_condition_color"
                    android:textSize="@dimen/text_size_11" />
            </demo.third.com.exceldemo.ui.views.RadioGroupEx>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_60"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn_normal"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_search"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_clear_condition"
                    android:layout_width="@dimen/layout_height_80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_height_40"
                    android:background="@drawable/clear_red_circle"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_2"
                    android:paddingTop="@dimen/height_2"
                    android:text="@string/btn_clear_condition"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/white_f2"
                android:visibility="visible" />

            <demo.third.com.exceldemo.ui.views.MyListView
                android:id="@+id/lv_private_fund"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="@color/white"
                android:scrollbars="none" />

            <demo.third.com.exceldemo.ui.views.AutoRefreshLayout
                android:id="@+id/refresh_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <demo.third.com.exceldemo.ui.views.MyListView
                    android:id="@+id/lv_private_fund2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:listSelector="@color/white"
                    android:scrollbars="none" />
            </demo.third.com.exceldemo.ui.views.AutoRefreshLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>