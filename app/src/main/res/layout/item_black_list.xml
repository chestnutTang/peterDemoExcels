<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fund_products"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_50"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_black_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin"
        android:gravity="center_vertical"
        android:maxLength="20"
        android:paddingBottom="@dimen/image_margin"
        android:paddingTop="@dimen/image_margin"
        android:text="@string/txt_black_tip"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_11"
        tools:text="非常厉害了" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/margin_8"
        android:layout_height="@dimen/height_14"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/text_margin"
        app:srcCompat="@drawable/ic_arrow_right" />

    <TextView
        android:id="@+id/tv_black_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:paddingBottom="@dimen/image_margin"
        android:paddingTop="@dimen/image_margin"
        android:text="2016-06-06"
        android:layout_marginRight="@dimen/margin_5"
        android:textColor="@color/black_52"
        android:textSize="@dimen/text_size_11"
        tools:text="2016-06-06" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:background="@color/white_f2" />

</RelativeLayout>
