<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.third.com.exceldemo.ui.fragment.TextFragment">

    <TextView
        android:id="@+id/text_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_50"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black3"
        android:textSize="@dimen/text_size_30"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/image_size_200"
        android:layout_height="@dimen/image_size_200"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/image_20"
        android:cacheColorHint="@color/white_all"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/white_all"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/text_margin_18" />

</FrameLayout>
