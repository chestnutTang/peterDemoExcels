<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bestStart" parent="Theme.AppCompat.Light.NoActionBar">
   <!-- <style name="bestStart" parent="android:Theme.NoTitleBar.Fullscreen">-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@mipmap/icon_welcome_default</item>
    </style>

    <!-- 图片选择的弹出框  start -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <!-- 头像的时候，弹出的布局窗口 -->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>


    <!--Switch的样式-->

    <style name="filtrate_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:button">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:textColor">@drawable/filtrate_character_color</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/white_all</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

</resources>
